<Window x:Class="supermarket_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supermarket_manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="25" FontWeight="Bold">Supermarket Manager</Label>
            <Button Width="100" Margin="10" Click="OnClick_Login">Log in</Button>
            <Button Width="100" Margin="10" Click="OnClick_Exit">Exit</Button>
        </StackPanel>
    </Grid>
</Window>
